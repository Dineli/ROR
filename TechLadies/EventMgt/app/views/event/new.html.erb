<div class="container">
</br>
  <div class="rounded-border">
  <h3>CREATE AN EVENT</h3>
  <%= form_for @event, :url =>{:action => "create", :id =>@event}, html: { multipart: true} do |f| %>
    <%if @event.errors.any? %>
      <div class="alert alert-danger">
        <strong>Incorrect data entry :</strong>
        <ul>
            <% @event.errors.full_messages.each do |msg| %>
              <p>- <%= msg %></p>
            <% end %>
          </ul>
      </div>
    <% end %>
    
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter event title"%>
    </div> 
      
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control', placeholder: "Enter event details"%>
    </div> 
      
    <div class="form-group">
      <%= f.label :image %>
      <%= f.file_field :image, class: 'btn btn-default btn-file'%>
    </div> 
      
      <div class="form-group">
      <%= f.label :event_date %></br>
      <%= f.datetime_select :date, {:ampm => true, :minute_step => 15}, {:order => [:day, :month, :year],  :start_year=> Time.now.year, :end_year=> Time.now.year + 2 }%>
      </div> 
        <%= f.submit 'Create Event', :class=> 'btn btn-info' %>
        <%= link_to "Back", index_path, :class=> 'btn btn-info' %>
    <% end %>
    </div>
  </div>
</br>